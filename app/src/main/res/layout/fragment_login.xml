<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginFragment"
    android:background="@mipmap/bg_blue">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Навыки для мудрых"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/login_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:text="Вход" />
            <EditText
                android:id="@+id/email_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:background="@drawable/shape_edit_text"
                android:hint="Email"
                android:textSize="20sp"

                android:layout_margin="10dp" />
            <TextView
                android:id="@+id/email_error_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email введен неправильно"
                android:textSize="10sp"
                android:textColor="@color/colorError"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/password_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_edit_text"
                android:hint="Пароль"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/pass_error_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пароль введен неправильно"
                android:textSize="10sp"
                android:textColor="@color/colorError"
                android:layout_marginStart="10dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/enter_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Войти"
                android:background="@drawable/login_button_sheet"
                android:textColor="#fff"
                android:layout_margin="10dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/registration_card_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textColor="#000"
                    android:text="Регистрация" />
                <EditText
                    android:id="@+id/name_reg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:hint="Имя"
                    android:textSize="20sp"
                    android:background="@drawable/shape_edit_text"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/name_error_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Имя введено неправильно"
                    android:textSize="10sp"
                    android:textColor="@color/colorError"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/email_reg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:hint="Email"
                    android:textSize="20sp"
                    android:background="@drawable/shape_edit_text"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/email_error_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email введен неправильно"
                    android:textSize="10sp"
                    android:textColor="@color/colorError"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/password_reg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_edit_text"
                    android:hint="Пароль"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/pass_error_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Маленький пароль"
                    android:textSize="10sp"
                    android:textColor="@color/colorError"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/password2_reg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_edit_text"
                    android:hint="Повторите пароль"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/pass2_error_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Неверный пароль"
                    android:textSize="10sp"
                    android:textColor="@color/colorError"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/enter_reg_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Зарегистрироваться"
                    android:background="@drawable/login_button_sheet"
                    android:textColor="#fff"
                    android:layout_margin="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/tab_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:text="Вход"
                android:textAllCaps="false"
                android:layout_weight="0.5"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/tab_reg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="Регистрация"
                android:textAllCaps="false"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:textColor="#fff"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/progress_login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#fff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/senior_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="28sp"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

